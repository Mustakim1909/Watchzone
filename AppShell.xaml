<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Watchzone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Watchzone"
    xmlns:views="clr-namespace:Watchzone.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Watchzone">

    <!--ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
         /-->
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage"/>
        </Tab>
        <Tab Title="Categories" Icon="categories.png">
            <ShellContent ContentTemplate="{DataTemplate views:CategoryPage}" Route="CategoryPage"/>
        </Tab>
        <Tab Title="Orders" Icon="orders.png">
            <ShellContent ContentTemplate="{DataTemplate views:OrdersPage}" Route="OrdersPage"/>
        </Tab>
        <Tab Title="Profile" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage"/>
        </Tab>
    </TabBar>

</Shell>
