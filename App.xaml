<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Watchzone"
             x:Class="Watchzone.App"
             xmlns:converters="clr-namespace:Watchzone">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Colors -->
            <Color x:Key="PrimaryColor">#7f54b3</Color>
            <Color x:Key="PrimaryDarkColor">#6a4698</Color>
            <Color x:Key="SecondaryColor">#96588a</Color>
            <Color x:Key="PageBackgroundColor">#f6f6f6</Color>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
            <Color x:Key="EntryBackgroundColor">#FFFFFF</Color>
            <Color x:Key="EntryBorderColor">#E0E0E0</Color>
            <Color x:Key="TextColor">#333333</Color>
            <Color x:Key="SecondaryTextColor">#666666</Color>
            <Color x:Key="PlaceholderColor">#999999</Color>
            <Color x:Key="ErrorColor">#E53935</Color>
            <Color x:Key="SuccessColor">#43A047</Color>

            <!-- Font Sizes -->
            <x:Double x:Key="LargeFontSize">24</x:Double>
            <x:Double x:Key="MediumFontSize">16</x:Double>
            <x:Double x:Key="SmallFontSize">14</x:Double>

            <!-- Spacing -->
            <x:Double x:Key="SmallSpacing">5</x:Double>
            <x:Double x:Key="MediumSpacing">10</x:Double>
            <x:Double x:Key="LargeSpacing">20</x:Double>

            <!-- Corner Radius -->
            <x:Double x:Key="SmallCornerRadius">5</x:Double>
            <x:Double x:Key="MediumCornerRadius">8</x:Double>
            <x:Double x:Key="LargeCornerRadius">12</x:Double>

            <!-- Shadow -->
            <Shadow x:Key="Shadow" Brush="Black" Offset="0,2" Opacity="0.1" Radius="4" />

            <!-- Styles -->
            <Style x:Key="HeaderLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <Thickness Left="0" Top="0" Right="0" Bottom="{StaticResource SmallSpacing}" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SubHeaderLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
                <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <Thickness Left="0" Top="0" Right="0" Bottom="{StaticResource LargeSpacing}" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="FormLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <Thickness Left="0" Top="{StaticResource MediumSpacing}" Right="{StaticResource SmallSpacing}" Bottom="{StaticResource SmallSpacing}" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ErrorLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource ErrorColor}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <Thickness Left="0" Top="0" Right="0" Bottom="{StaticResource MediumSpacing}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="IsVisible" Value="False" />
            </Style>

            <Style x:Key="LinkLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <!-- Entry Styles -->
            <Style x:Key="FormEntry" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource EntryBackgroundColor}" />
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderColor}" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <Thickness Left="0" Top="0" Right="0" Bottom="{StaticResource SmallSpacing}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
            </Style>


            <!-- Button Styles -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <Thickness Left="0" Top="{StaticResource LargeSpacing}" Right="0" Bottom="0" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
                <Setter Property="BorderColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>

            <!-- Layout Styles -->
            <Style x:Key="CardLayout" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
                <Setter Property="Padding">
                    <Setter.Value>
                        <Thickness Left="20" Top="15" Right="20" Bottom="15" />
                    </Setter.Value>
                </Setter>
                <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Shadow" Value="{StaticResource Shadow}" />
            </Style>
            
             <!-- Login-specific Styles -->
    <Style x:Key="LoginHeaderLabel" TargetType="Label" BasedOn="{StaticResource HeaderLabel}">
        <Setter Property="Text" Value="Welcome Back" />
    </Style>
    
    <Style x:Key="LoginSubHeaderLabel" TargetType="Label" BasedOn="{StaticResource SubHeaderLabel}">
        <Setter Property="Text" Value="Sign in to your WooCommerce account" />
    </Style>
    
    <Style x:Key="SocialButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
        <Setter Property="HeightRequest" Value="45" />
        <Setter Property="BorderColor" Value="{StaticResource EntryBorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>
    
    <Style x:Key="DividerLayout" TargetType="StackLayout">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,20,0,20" />
    </Style>
    
    <Style x:Key="DividerLine" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource EntryBorderColor}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
    </Style>
    
    <Style x:Key="DividerText" TargetType="Label">
        <Setter Property="Text" Value="OR" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
        <Setter Property="Padding" Value="10,0" />
        <Setter Property="Margin" Value="10,0" />
    </Style>

            <Style x:Key="ForgotPasswordLabel" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="End" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Margin" Value="0,5,0,20" />
            </Style>

            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
