<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Watchzone.Views.CategoryProductPage"
             xmlns:vm="clr-namespace:Watchzone.ViewModels"
             Title="{Binding Title}">
    <RefreshView IsRefreshing="{Binding IsLoading}" Command="{Binding RefreshCommand}">
        <ContentView Padding="10,0">
            <CollectionView ItemsSource="{Binding Products}"
                        SelectionMode="Single"
                        SelectionChanged="OnProductSelected"
                        >
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10"
VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HeightRequest="250" HasShadow="True" CornerRadius="15" Padding="0" BackgroundColor="White">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnProductTapped" 
                                 CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="150,Auto,Auto,Auto">
                                <Image Source="{Binding Images[0].Src, TargetNullValue='placeholder'}"
                       Aspect="AspectFill"
                       Grid.Row="0" />
                                <Label Text="{Binding Name}"
                       Grid.Row="1"
                       Margin="10,5,10,0"
                       FontAttributes="Bold"
                       LineBreakMode="TailTruncation"
                       MaxLines="1"
                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                               <!-- Price Section -->
<HorizontalStackLayout Grid.Row="2" Margin="10,0,10,0" Spacing="8" VerticalOptions="Center">

    <!-- Regular Price (Strikethrough) -->
    <Label Text="{Binding RegularPrice, StringFormat='₹{0}'}"
           FontSize="14"
           TextColor="Gray"
           TextDecorations="Strikethrough"
           IsVisible="{Binding OnSale}" />

    <!-- Sale Price -->
    <Label Text="{Binding SalePrice, StringFormat='₹{0}'}"
           FontSize="16"
           FontAttributes="Bold"
           TextColor="Red"
           IsVisible="{Binding OnSale}" />

    <!-- Normal Price (if not on sale) -->
    <Label Text="{Binding Price, StringFormat='₹{0}'}"
           FontSize="16"
           FontAttributes="Bold"
           TextColor="Green"
           IsVisible="{Binding OnSale, Converter={StaticResource InverseBooleanConverter}}" />
</HorizontalStackLayout>

                                <Button Text="Add to Cart"
                    Grid.Row="3"
                    Margin="10,5,10,10"
                    BackgroundColor="Orange"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    WidthRequest="120"
                    HeightRequest="40"
                    Clicked="OnAddToCartClicked"
                    CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ContentView>
    </RefreshView>
</ContentPage>